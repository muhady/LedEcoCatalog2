@{
  var title = ViewData["Title"] as string;
  title = "LEDeco Katalóg" + (string.IsNullOrWhiteSpace(title) ? null : $" - {title}");
}
<!DOCTYPE html>
<html lang="sk">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>@title</title>
  <environment include="Development">
    <link rel="stylesheet" href="~/css/catalog.css" asp-append-version="true" />
  </environment>
  <environment exclude="Development">
    <link rel="stylesheet" href="~/css/catalog.min.css" asp-append-version="true" />
  </environment>
  @RenderSection("Styles", required: false)
  <script>
    function ImgErrorVideo(source)
    {
      source.src = "/images/parameters/error.png";
      source.onerror = "";
      return true;
    }
  </script>
</head>
<body>

  @RenderBody()

  <environment include="Development">
    <script src="~/lib/tslib/tslib.js" asp-append-version="true"></script>
    <script src="~/js/Catalog.js" asp-append-version="true"></script>
  </environment>
  <environment exclude="Development">
    <script src="~/lib/tslib/tslib.min.js" asp-append-version="true"></script>
    <script src="~/js/Catalog.min.js" asp-append-version="true"></script>
  </environment>
  @RenderSection("Scripts", required: false)
</body>
</html>
